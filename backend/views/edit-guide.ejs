<div class="container mt-5">
  <h2 class="mb-3">Edit Guide</h2>

  <form action="/guides/<%= guide.ID %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="nama" class="form-label">Nama Guide</label>
      <input 
        type="text" 
        class="form-control" 
        id="nama" 
        name="nama"   <!-- ðŸ”¹ lowercase -->
        value="<%= guide.Nama %>" 
        required>
    </div>

    <div class="mb-3">
      <label for="link" class="form-label">Link Guide</label>
      <input 
        type="url" 
        class="form-control" 
        id="link" 
        name="link"   <!-- ðŸ”¹ lowercase -->
        value="<%= guide.Link %>" 
        required>
    </div>

    <button type="submit" class="btn btn-primary">Update Guide</button>
    <a href="/guides" class="btn btn-secondary">Batal</a>
  </form>
</div>
